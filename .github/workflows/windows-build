name: windows-build

on:
  workflow_dispatch:
  push:
    branches: [ main ]

jobs:
  build:
    runs-on: windows-latest
    steps:
      - uses: actions/checkout@v4
      - name: Setup .NET 10 SDK
        uses: actions/setup-dotnet@v4
        with:
          dotnet-version: '10.0.x'
      - name: Restore
        run: dotnet restore QuantDesk.DataHub.sln
      - name: Test
        run: dotnet test QuantDesk.DataHub.sln -c Release
      - name: Build Package
        run: build.cmd
      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: QuantDesk_DataHub_v1.2
          path: QuantDesk_DataHub_v1.2_*.zip
